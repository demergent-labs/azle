{
    "canisters": {
        "bitcoin": {
            "type": "custom",
            "main": "src/index.ts",
            "candid": "src/index.did",
            "build": "npx azle bitcoin",
            "wasm": ".azle/bitcoin/bitcoin.wasm",
            "gzip": true,
            "declarations": {
                "output": "test/dfx_generated/bitcoin",
                "node_compatibility": true
            }
        }
    },
    "networks": {
        "local": {
            "bind": "127.0.0.1:8000",
            "type": "ephemeral"
        }
    },
    "defaults": {
        "bitcoin": {
            "enabled": true,
            "nodes": ["127.0.0.1:18444"],
            "log_level": "info"
        }
    }
}
