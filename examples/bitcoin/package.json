{
    "scripts": {
        "bitcoind": ".bitcoin/bin/bitcoind -conf=$(pwd)/.bitcoin.conf -datadir=$(pwd)/.bitcoin --port=18444",
        "bitcoin-cli": "bitcoin-cli -conf=$(pwd)/.bitcoin.conf -datadir=$(pwd)/.bitcoin -rpcport=18443",
        "deploy": "scripts/deploy.sh bitcoin",
        "start": "dfx start --enable-bitcoin --clean",
        "pre_tests": "ts-node --transpile-only --ignore=false test/pretest.ts",
        "tests": "npm run pre_tests && ts-node --transpile-only --ignore=false test/test.ts",
        "test": "AZLE_TEST_FETCH=false npm run tests && AZLE_TEST_FETCH=true npm run tests"
    },
    "dependencies": {
        "azle": "0.20.1"
    },
    "devDependencies": {
        "@dfinity/agent": "0.11.1",
        "ts-node": "10.7.0",
        "typescript": "4.6.3"
    }
}
